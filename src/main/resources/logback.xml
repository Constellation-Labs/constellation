<configuration>
    <jmxConfigurator/>

    <appender name="metrics" class="io.prometheus.client.logback.InstrumentedAppender" />

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%date [%thread] [%X{node_id}] %-5level %logger{25} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="apiclient" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%date [%thread] %-5level %logger{25} host=%X{host}:%X{port} - %msg%n</pattern>
        </encoder>
    </appender>

    <property name="HOME_LOG" value="logs/app.log"/>
    <appender name="rollingFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${HOME_LOG}</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/archived/app.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>500MB</maxFileSize>
            <totalSizeCap>20GB</totalSizeCap>
            <maxHistory>60</maxHistory>
        </rollingPolicy>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%date [%thread] [%X{node_id}] %-5level %logger{25} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="json" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>DEBUG</level>
        </filter>
        <file>/tmp/dag.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>/tmp/dag.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <totalSizeCap>1GB</totalSizeCap>
            <maxHistory>5</maxHistory>
        </rollingPolicy>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <includeCallerData>true</includeCallerData>
        </encoder>
    </appender>

    <logger level="debug" name="APIClient" additivity="false">
        <appender-ref ref="apiclient"/>
    </logger>

    <logger level="warn" name="swaydb" additivity="false">
        <appender-ref ref="console"/>
    </logger>

    <logger level="debug" name="akka.monitor.instrumentation" />
    <logger level="debug" name="io.kontainers.micrometer" />

    <logger name="org.constellation" level="debug">
        <appender-ref ref="rollingFile"/>
        <appender-ref ref="json"/>
    </logger>

    <root level="info">
        <appender-ref ref="metrics" />
    </root>
</configuration>
